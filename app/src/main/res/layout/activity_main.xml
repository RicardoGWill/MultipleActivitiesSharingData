<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.MainActivity">

    <TextView
            android:id="@+id/profileInfoTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Your Profile"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/signInInfoTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Sign In To Edit"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileInfoTV" />

    <EditText
            android:id="@+id/usernameET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Username (Rick)"
            android:maxLines="1"
            android:inputType="textCapWords|textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signInInfoTV"/>

    <EditText
            android:id="@+id/pinET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="PIN (1234)"
            android:maxLines="1"
            android:inputType="numberPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/usernameET" />

    <Button
            android:id="@+id/signInB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Sign In"
            app:layout_constraintEnd_toEndOf="@+id/pinET"
            app:layout_constraintStart_toStartOf="@+id/pinET"
            app:layout_constraintTop_toBottomOf="@+id/pinET" />

    <TextView
            android:id="@+id/nameInfoTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="Name:    "
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/nameTV"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signInB" />

    <TextView
            android:id="@+id/nameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Not Set)"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/nameInfoTV"
            app:layout_constraintStart_toEndOf="@+id/nameInfoTV"
            app:layout_constraintTop_toTopOf="@+id/nameInfoTV"/>

    <TextView
            android:id="@+id/ageInfoTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="Age:    "
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/nameTV"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameInfoTV" />

    <TextView
            android:id="@+id/ageTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Not Set)"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/ageInfoTV"
            app:layout_constraintStart_toEndOf="@+id/nameInfoTV"
            app:layout_constraintTop_toTopOf="@+id/ageInfoTV"
            app:layout_constraintVertical_bias="1.0"/>

    <TextView
            android:id="@+id/cityInfoTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="City:    "
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/nameTV"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ageInfoTV" />

    <TextView
            android:id="@+id/cityTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Not Set)"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/cityInfoTV"
            app:layout_constraintStart_toEndOf="@+id/nameInfoTV"
            app:layout_constraintTop_toTopOf="@+id/cityInfoTV"
            app:layout_constraintVertical_bias="1.0"/>

    <TextView
            android:id="@+id/stateInfoTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="State:    "
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/nameTV"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cityInfoTV" />

    <TextView
            android:id="@+id/stateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Not Set)"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/stateInfoTV"
            app:layout_constraintStart_toEndOf="@+id/nameInfoTV"
            app:layout_constraintTop_toTopOf="@+id/stateInfoTV"
            app:layout_constraintVertical_bias="1.0"/>

</android.support.constraint.ConstraintLayout>