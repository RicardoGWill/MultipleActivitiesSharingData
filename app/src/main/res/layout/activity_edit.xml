<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.EditActivity">

    <Button
            android:id="@+id/eReturnB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save and Return"
            app:layout_constraintStart_toStartOf="@+id/eStateET"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/eStateET"
    />
    <TextView
            android:text="Name:    "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            android:layout_marginStart="16dp" android:id="@+id/eNameInfoTV" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/eNameET"
            app:layout_constraintHorizontal_chainStyle="packed"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:ems="10"
            app:layout_constraintTop_toTopOf="@+id/eNameInfoTV"
            android:id="@+id/eNameET" app:layout_constraintBottom_toBottomOf="@+id/eNameInfoTV"
            android:hint="Enter Name" app:layout_constraintStart_toEndOf="@+id/eNameInfoTV"
    />
    <TextView
            android:text="Age:    "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eAgeInfoTV" android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/eNameET"/>
    <TextView
            android:text="City:    "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/eCityInfoTV" android:textSize="24sp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/eAgeET"/>
    <TextView
            android:text="State:    "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/eStateInfoTV" android:textSize="24sp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/eCityET"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/eAgeET"
            android:hint="Enter Age" app:layout_constraintTop_toTopOf="@+id/eAgeInfoTV"
            app:layout_constraintBottom_toBottomOf="@+id/eAgeInfoTV"
            app:layout_constraintStart_toStartOf="@+id/eNameET"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/eCityET"
            app:layout_constraintTop_toTopOf="@+id/eCityInfoTV"
            app:layout_constraintBottom_toBottomOf="@+id/eCityInfoTV"
            android:hint="Enter City" app:layout_constraintStart_toStartOf="@+id/eAgeET"
            android:inputType="textCapWords"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:ems="10"
            android:id="@+id/eStateET"
            app:layout_constraintTop_toTopOf="@+id/eStateInfoTV"
            app:layout_constraintBottom_toBottomOf="@+id/eStateInfoTV"
            android:hint="Enter State" app:layout_constraintStart_toStartOf="@+id/eCityET"/>

</android.support.constraint.ConstraintLayout>