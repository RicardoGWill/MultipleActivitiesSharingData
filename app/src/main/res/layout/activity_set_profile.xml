<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.SetProfileActivity">

    <TextView
            android:id="@+id/asStateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/asStateInfoTV3"
            app:layout_constraintStart_toEndOf="@+id/asNameInfoTV"
            app:layout_constraintTop_toTopOf="@+id/asStateInfoTV3" />

    <TextView
            android:id="@+id/asStateInfoTV3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="State:    "
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/asNameTV"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/asCityInfoTV4" />

    <TextView
            android:id="@+id/asCityTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/asCityInfoTV4"
            app:layout_constraintStart_toEndOf="@+id/asNameInfoTV"
            app:layout_constraintTop_toTopOf="@+id/asCityInfoTV4" />

    <TextView
            android:id="@+id/asCityInfoTV4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="City:    "
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/asNameTV"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/asNameInfoTV2"/>

    <TextView
            android:id="@+id/asAgeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/asNameInfoTV2"
            app:layout_constraintStart_toEndOf="@+id/asNameInfoTV"
            app:layout_constraintTop_toTopOf="@+id/asNameInfoTV2" />

    <TextView
            android:id="@+id/asNameInfoTV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Age:    "
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/asNameTV"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/asNameInfoTV" />

    <Button
            android:id="@+id/returnB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Save and Return to Sign In Page"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editB"/>

    <Button
            android:id="@+id/editB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Edit Profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/asStateInfoTV3"/>

    <TextView
            android:id="@+id/asNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/asNameInfoTV"
            app:layout_constraintStart_toEndOf="@+id/asNameInfoTV"
            app:layout_constraintTop_toTopOf="@+id/asNameInfoTV" />

    <TextView
            android:id="@+id/asNameInfoTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Name:    "
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/asNameTV"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>